---
export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Taller Industrial Brenes - Soluciones en portones, estructuras met치licas y soldadura especializada en Costa Rica", ogImage = "/LogoTallerBrenes.png" } = Astro.props;

const siteUrl = "https://www.tallerindustrialbrenes.com";
const canonicalURL = new URL(Astro.url.pathname, Astro.site || siteUrl);
const fullOgImage = new URL(ogImage, siteUrl).toString();
