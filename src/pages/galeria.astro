---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import GalleryGrid from '../components/GalleryGrid.astro';
import Toast from '../components/Toast.astro';

import { getCollection } from 'astro:content';
import type { GalleryImage } from '../lib/types';

const galleryCollection = await getCollection('gallery_images');
const galleryImages: GalleryImage[] = galleryCollection.map(item => ({
  image: item.data.image,
  caption: item.data.caption,
  category: item.data.category,
  created_at: item.data.created_at
}));
---

<Layout 
  title="Galería - Taller Industrial Brenes"
  description="Galería de proyectos realizados: más de 1000 proyectos en portones, estructuras metálicas y soldadura especializada."
>
  <Navbar />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-primary-800 to-dark-800 text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-6">Nuestros Proyectos</h1>
        <p class="text-xl opacity-90 max-w-3xl mx-auto">
          Más de 1000 proyectos realizados con la más alta calidad y estándares en materiales
        </p>
      </div>
    </section>
    
    <!-- Galería con filtros -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <GalleryGrid images={galleryImages} showFilters={true} />
      </div>
    </section>
    
    <!-- CTA -->
    <section class="py-20 bg-gradient-to-r from-dark-800 to-primary-800 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-6">¿Tienes un proyecto en mente?</h2>
        <p class="text-xl mb-8 opacity-90">Contáctanos para una cotización gratuita</p>
        <a href="/contacto" class="inline-flex items-center gap-3 bg-white text-dark-800 hover:bg-gray-100 font-bold text-lg px-10 py-4 rounded-full shadow-xl hover:shadow-white/25 transform hover:scale-105 transition-all duration-300 border border-gray-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          Solicitar Cotización
          <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
  <Toast />
</Layout>