---
export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, subtitle, centered = true } = Astro.props;
---

<div class={`mb-12 ${centered ? 'text-center' : ''}`}>
  <h2 class="text-3xl md:text-4xl font-bold text-dark-800 mb-4 scroll-animate fade-up">
    {title}
  </h2>
  {subtitle && (
    <p class="text-lg text-gray-600 max-w-3xl mx-auto scroll-animate fade-up">
      {subtitle}
    </p>
  )}
</div>