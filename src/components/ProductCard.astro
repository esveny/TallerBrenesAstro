---
export interface Props {
  name: string;
  description: string;
  image: string;
  price?: number;
  category: string;
}

const { name, description, image, price, category } = Astro.props;

const formatPrice = (price?: number): string => {
  if (!price) return '';
  return new Intl.NumberFormat('es-CR', {
    style: 'currency',
    currency: 'CRC'
  }).format(price);
};
---

<div 
  class="bg-white rounded-2xl shadow-lg overflow-hidden card-hover scroll-animate fade-up"
  data-category={category}
>
  <div class="aspect-video overflow-hidden">
    <img 
      src={image} 
      alt={name}
      class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
      loading="lazy"
    />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-dark-800 mb-2">{name}</h3>
    <p class="text-gray-600 mb-4 leading-relaxed">{description}</p>
    {price && (
      <div class="text-2xl font-bold text-accent-600">
        {formatPrice(price)}
      </div>
    )}
    <div class="mt-4">
      <span class="inline-block bg-accent-100 text-accent-800 text-sm font-medium px-3 py-1 rounded-full capitalize">
        {category}
      </span>
    </div>
  </div>
</div>