<div id="business-status" class="inline-flex items-center">
  <span 
    id="status-indicator" 
    class="px-3 py-1 text-sm font-bold rounded-full bg-yellow-500 text-white animate-pulse"
  >
    ‚è≥ Verificando...
  </span>
</div>

<script>
  import { getCurrentBusinessStatus } from '../lib/businessHours';
  
  function updateBusinessStatus() {
    const indicator = document.getElementById('status-indicator');
    if (!indicator) return;
    
    const status = getCurrentBusinessStatus();
    
    indicator.textContent = status.message;
    indicator.className = `px-3 py-1 text-sm font-bold rounded-full ${
      status.isOpen 
        ? 'bg-green-500 text-white' 
        : 'bg-red-500 text-white'
    }`;
  }
  
  // Actualizar estado al cargar
  document.addEventListener('DOMContentLoaded', updateBusinessStatus);
  
  // Actualizar cada minuto
  setInterval(updateBusinessStatus, 60000);
</script>